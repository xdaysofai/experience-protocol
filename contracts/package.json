{
  "name": "@xp/contracts",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "hardhat compile",
    "run": "node --env-file=../.env",
    "deploy:amoy": "hardhat run scripts/deploy-amoy.js --network amoy",
    "deploy:sepolia": "node --env-file=../.env ../node_modules/.bin/hardhat run scripts/deploy-sepolia.js --network sepolia",
    "cfg:set-prices:amoy": "node --env-file=../.env scripts/cfg-set-prices-amoy.js",
    "cfg:set-prices:sepolia": "hardhat run scripts/cfg-set-prices-sepolia.js --network sepolia"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@openzeppelin/contracts": "5.0.2",
    "dotenv": "16.4.5",
    "ethers": "6.13.2",
    "hardhat": "2.22.12"
  }
}
